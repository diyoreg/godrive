# Настройки сервера
PORT=3000

# JWT секрет (ОБЯЗАТЕЛЬНО измените в продакшене!)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Время жизни JWT токенов
JWT_EXPIRES_IN=24h

# Режим работы
NODE_ENV=development

# Лимит размера запросов (по умолчанию 10mb)
